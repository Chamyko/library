<div class="container col-md-offset">


  <div class="row col-md-6">
    <div class="legend" ><legend>Log In</legend></div>
    <% if flash[:danger].present? %>
        <div class="alert alert-danger"><%= flash[:danger] %></div>
    <% end %>
    <%=form_for(:user,url:verify_auths_path) do |f| %>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <br>
        <p>New user? <%= link_to "Sign up now!", new_users_path %></p>
        <div class="control-group">
          <div class="control text-center">
            <button class="btn btn-success">Log-In</button>
          </div>
        </div>
    <% end %>
  </div>
</div>
